<%- include("partials/header.ejs")%>

<p class="fs-1"><%=title%></h1>
<p><%=content%></p>

<% if(locals.posts) { %>
  <% posts.forEach(function(post){ %>
    <p class="fs-1"><%=post.title%></p>
    <p><%=post.text.substring(0,100)%> ... <a href = "/posts/<%=post.title%>">Read More</a>  </p>
    <% }) %> 
<% } else { %>
  <p>No posts to display</p>
<% } %>

