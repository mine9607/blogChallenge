<%- include("partials/header.ejs")%>

<h1><%=title%></h1>

<form action="/compose" method="POST">
  <div class="form-group">
    <label for="TitleArea" class="form-label">Title</label>
    <input type="text" name="blogTitle" class="form-control" id="TitleArea" placeholder="Blog Title" />
  </div>
  <div class="form-group">
    <label for="TextArea" class="form-label">Post</label>
    <textarea class="form-control" name="blogText" id="TextArea" placeholder="Blog post ..." rows="3"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Publish</button>
  </div>
</form>

<%- include("partials/footer.ejs")%>
